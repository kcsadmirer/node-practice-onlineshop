<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="centered">
        <%if(product){%>
        <h1><%=product.title%></h1>
        <hr>
        <div>
            <img src="<%=product.imageUrl%>" alt="<%=product.title%>" style="width: 20%;border-radius: 1rem;">
