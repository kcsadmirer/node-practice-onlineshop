        <h2>$<%=product.price%></h2>
        <p><%=product.description%></p>
        <%-include('../includes/add-to-cart.ejs')%>
        <%} else{%>
        <h1>No Such Book! Plz be thoughtful & use ur time for something productive!</h1>
        <%}%>
    </main>
    <%- include('../includes/end.ejs') %>